<data readOnly="true">
    <collection id="departmentsDc"
                class="com.company.sales.entity.Department"
                view="_local">
        <loader id="departmentsDl">
            <query>
                <![CDATA[select e from sales_Department e]]>
            </query>
        </loader>
    </collection>
</data>
<layout>
    <treeTable id="departmentsTable"
               width="100%"
               dataContainer="departmentsDc"
               hierarchyProperty="parentDept">
        <columns>
            <column id="name"/>
            <column id="active"/>
        </columns>
    </treeTable>
</layout>